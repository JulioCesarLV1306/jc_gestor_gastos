rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar: verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función auxiliar: verificar si el usuario es el propietario
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Permitir lectura solo al propietario
      allow read: if isOwner(userId);
      
      // Permitir creación solo durante el registro (con validación flexible)
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       request.resource.data.uid == userId &&
                       request.resource.data.email is string;
      
      // Permitir actualización solo al propietario
      allow update: if isOwner(userId) && 
                       request.resource.data.uid == userId;
      
      // Permitir eliminación solo al propietario
      allow delete: if isOwner(userId);
    }
    
    // Reglas para la colección de gastos
    match /expenses/{expenseId} {
      // Permitir lectura solo si el usuario es el propietario
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir creación solo si el userId coincide con el usuario autenticado
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'description', 'amount', 'category', 'date', 'createdAt']) &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount >= 0;
      
      // Permitir actualización solo al propietario y sin cambiar el userId
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount >= 0;
      
      // Permitir eliminación solo al propietario
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Reglas para la colección de presupuestos
    match /budgets/{budgetId} {
      // Permitir lectura solo si el usuario es el propietario
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir creación solo si el userId coincide
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'category', 'amount', 'period', 'startDate', 'createdAt']) &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount > 0;
      
      // Permitir actualización solo al propietario
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.amount is number &&
                       request.resource.data.amount > 0;
      
      // Permitir eliminación solo al propietario
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Reglas para la colección de ahorros
    match /savings/{savingId} {
      // Permitir lectura solo si el usuario es el propietario
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir creación solo si el userId coincide
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'goal', 'targetAmount', 'currentAmount', 'targetDate', 'createdAt']) &&
                       request.resource.data.targetAmount is number &&
                       request.resource.data.targetAmount > 0 &&
                       request.resource.data.currentAmount is number &&
                       request.resource.data.currentAmount >= 0;
      
      // Permitir actualización solo al propietario
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.targetAmount is number &&
                       request.resource.data.targetAmount > 0 &&
                       request.resource.data.currentAmount is number &&
                       request.resource.data.currentAmount >= 0;
      
      // Permitir eliminación solo al propietario
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Reglas para la colección de predicciones
    match /predictions/{predictionId} {
      // Permitir lectura solo si el usuario es el propietario
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir creación solo si el userId coincide
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'type', 'predictedValue', 'category', 'predictionDate', 'confidence', 'createdAt']) &&
                       request.resource.data.predictedValue is number &&
                       request.resource.data.confidence is number &&
                       request.resource.data.confidence >= 0 &&
                       request.resource.data.confidence <= 1;
      
      // Permitir actualización solo al propietario
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;
      
      // Permitir eliminación solo al propietario
      allow delete: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Denegar acceso a cualquier otra colección
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
